<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rubenabad.teamworkprojects.view.ProjectListActivity"
    tools:ignore="MissingPrefix">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:clipToPadding="false"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/downloadIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="84:64"
        app:layout_constraintEnd_toStartOf="@+id/downloadText"
        app:layout_constraintHorizontal_weight="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/animated_ic_download"
        android:visibility="gone"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/downloadText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="@string/first_time_projects_download"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/downloadIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.65"
        app:layout_constraintStart_toEndOf="@+id/downloadIcon"
        app:layout_constraintTop_toTopOf="@+id/downloadIcon"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/errorIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/retry"
        app:layout_constraintDimensionRatio="84:64"
        app:layout_constraintEnd_toStartOf="@+id/errorText"
        app:layout_constraintHorizontal_weight="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_network_error"
        android:visibility="gone"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/errorText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="@string/error_retrieve_projects"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/errorIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.65"
        app:layout_constraintStart_toEndOf="@+id/errorIcon"
        app:layout_constraintTop_toTopOf="@+id/errorIcon"
        android:visibility="gone"/>

    <Button
        android:id="@+id/retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/errorIcon"
        app:layout_constraintEnd_toEndOf="@+id/errorText"
        app:layout_constraintTop_toBottomOf="@+id/errorIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/retry"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_tag"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
